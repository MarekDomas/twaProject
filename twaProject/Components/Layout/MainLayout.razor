@using System.Diagnostics
@using twaProject.Classes
@using Task = twaProject.Classes.Task
@inherits LayoutComponentBase
@inject StateManager stateManager
@inject ProtectedLocalStorage ProtectedLocalStorage
@inject NavigationManager NavigationManager

<div class="page">
    @if (stateManager.isUserLogged)
    {
        <div class="sidebar">
            <NavMenu/>
        </div>
    }

    <main >
        @if (stateManager.isUserLogged)
        {
            <div class="top-row px-4">
                <a @onclick="LogOut">Log out</a>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{

    async void LogOut()
    {
        await ProtectedLocalStorage.DeleteAsync("currentUser");

        // Additional state clearing logic here

        // Redirect to the initial state or home page
        NavigationManager.NavigateTo("/", true);
    }
    
}